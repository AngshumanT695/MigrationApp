{
  "changes": [
    {
      "name": "HttpModule",
      "description": "Replace `HttpModule` and `Http` Service with `HttpClientModule` and `HttpClient` Service.",
      "replace": [
        {
          "name": "Module-Name",
          "file-types": ["*.module.ts"],
          "from": "HttpModule",
          "to": "HttpClientModule"
        },
        {
          "name": "Module-Location",
          "file-types": ["*.module.ts"],
          "from": "@angular\/http",
          "to": "@angular/common/http"
        },
        {
          "name": "Service-Name",
          "file-types": ["*.component.ts"],
          "from": "Http",
          "to": "HttpClient"
        },
        {
          "name": "Service-Location",
          "file-types": ["*.component.ts"],
          "from": "@angular\/http",
          "to": "@angular/common/http"
        }
      ],
      "uninstall": [
        "@angular/http"
      ],
      "api": [
        "rem-http-json-map"
      ]
    },
    {
      "name": "RxJS-5",
      "description": "Remove deprecated RxJS 5 features.",
      "commands": "npx rxjs-tslint rxjs-5-to-6-migrate -p src/tsconfig.app.json",
      "uninstall": [
        "rxjs-compat"
      ]
    },
    {
      "name": "ng-deep",
      "description": "Replace `/deep/` with `::ng-deep` in your styles. Note they will be deprecated.",
      "replace": [
        {
          "name": "/deep/",
          "file-types": ["*.css", "*.html", "*.component.ts"],
          "from": "/deep/",
          "to": "::ng-deep"
        }
      ]
    },
    {
      "name": "ng-Form",
      "description": "Replace `ngForm` element selector to `ng-form`",
      "replace": [
        {
          "name": "ngForm",
          "file-types": ["*.css", "*.html", "*.component.ts"],
          "from": "ngForm",
          "to": "ng-form"
        }
      ]
    }
  ]
}
